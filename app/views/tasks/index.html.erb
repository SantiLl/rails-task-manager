<h1>All the tasks you need to compelte!</h1>

<ul>
  <% @tasks.each do |task| %>
<%= link_to task.title, task_path(task) %>
  <li> <%= task.completed ? content_tag(:i, "", class: ["far fa-check-square"]) : content_tag(:i, "", class: ["far fa-square"]) %> <%= task.title %>
    <%= link_to content_tag(:i, "", class: ["fas fa-trash"]), task_path(task),
    method: :delete,
    data: { confirm: "Are you sure you want to delete?" } %>

  </li>
  <% end %>
</ul>

<%= link_to "Create a new task", new_task_path %>
