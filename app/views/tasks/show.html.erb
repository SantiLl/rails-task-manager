<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p><%= @task.completed ? content_tag(:i, " This task is completed", class: ["far fa-check-square"]) : content_tag(:i, " This task is not completed", class: ["far fa-square"]) %></p>

<%= link_to "Go back to homepage", tasks_path %>

<%= link_to "Edit this task", edit_task_path(@task) %>
